.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name
        = current_user.name
      = link_to edit_user_path(current_user), class: 'chat-side__user--new-group' do
        = fa_icon 'cog'
      = link_to new_group_path, class: 'chat-side__user--edit-user' do
        = fa_icon "pencil-square-o"
  .chat-side__groups-list
    .chat-side__groups
      - current_user.groups.each do |group|
        = link_to group_messages_path(group), class: 'chat-side__group' do
          .chat-side__group-name
            = group.name
          .chat-side__group-message
            = group.show_last_message
